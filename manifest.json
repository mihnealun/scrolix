{
  "manifest_version": 3,
  "name": "AutoScroll",
  "version": "1.0",
  "description": "Automatically scroll pages at adjustable speed",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoScroll"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}